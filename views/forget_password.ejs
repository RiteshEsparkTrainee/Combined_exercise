<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
</head>
<body>
    <form id="myForm" method="get">
        <input type="text" name="useremail" id="username">
    </form>
    <input type="button" value="submit" onclick="forPass()">

    <script>
        async function forPass()
        {
            var formElement = document.getElementById('myForm')
            var formdata = new FormData(formElement)
            const params1 = new URLSearchParams(formdata)
            const jobdata= await new Response(params1).text()
            console.log(formdata)
           
            console.log(params1)
            console.log(jobdata)

            const response = await fetch("http://localhost:8083/validate_username",{
                method : "POST",
                headers : {
                    'Content-type': 'application/x-www-form-urlencoded'
                },
                body : jobdata
            })
            let userName= await response.text()
            console.log(userName)

            if(userName == 'userName not Exist')
            {
                console.log('username Not Exist')
            }
            else
            {
                window.location.href=`/validate_password_link?username=${userName}`
            }
        }
    </script>
</body>
</html>