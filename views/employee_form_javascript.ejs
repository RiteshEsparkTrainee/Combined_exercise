<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/form_style.css" rel="stylesheet" type="text/css">
</head>

<body>
    <h2>Customer Form</h2>
    <form action="/savedform" target="_self" method="post" autocomplete="on" name="myform" onsubmit="return validateForm()">
        <table>
            <tr>
                <td>
                    <label for="fname"> First name </label>
                    <input type="text" id="fname" name="fname" placeholder="Ritesh" tabindex="1" required><br>

                </td>
                <td>
                    <label for="lname">Last name</label>
                    <input type="text" id="lname" name="lname" placeholder="Jaiswal" tabindex="2" required><br>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="age"> Age </label>
                    <input type="number" id="age" name="age" tabindex="3" required><br>
                </td>
                <td>
                    <label for="Number"> Mobile No </label>
                    <input type="number" id="Number" name="number" tabindex="4" required><br>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="email"> Email </label>
                    <input type="text" id="email" name="email" placeholder="ritesh@gmail.com" tabindex="5" required><br>
                </td>
                <td>
                    Gender
                    <input type="radio" id="male" name="Gender" value="male" tabindex="6" on>
                      <label for="male">Male</label>
                      <input type="radio" id="female" name="Gender" value="female" tabindex="7">
                      <label for="female">Female</label><br>
                </td>
            </tr>
            <br>
            <tr>

                <td>
                    Hobbies
                    
                    <input type="checkbox" id="Cricket" name="Hobbies" value="Cricket" tabindex="8">
                    <label for="Cricket"> Cricket</label>
                    <input type="checkbox" id="FootBall" name="Hobbies" value="FootBall">
                    <label for="vehicle2"> FootBall</label>
                </td>
                <td>
                    <label for="address"> Address </label>
                    <input type="text" id="address" name="address" required><br>
                </td>
            </tr>
            <br>
         



        </table>
        <div class="submitbutton">
            <button type="submit">Submit</button>
        </div>

    </form>
    <script>

        function validateForm() {           
            var Genders = document.getElementsByName("Gender");
            var count = Genders.length;
            var selected = false;
            while (count--)
                if (selected = Genders[count].checked)
                    break;
            if (!selected) {
                alert('Choose your Gender');
                return false;
            }
            return true;
        }
    </script>
</body>


</html>